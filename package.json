{
  "name": "rpnow",
  "private": true,
  "scripts": {
    "start": "cross-env VUE_DEV=true DEBUG=rpnow RPNOW_CONFIG_FILE='./tooling/rpnow.ini' RPNOW_DATA_DIR='./data' nodemon src/index.js --ext js,json,vue,css",
    "lint": "eslint 'src/**/*.js' --ignore-pattern='src/views/'",
    "test": "ava",
    "build": "./tooling/build.sh",
    "grant-node-low-ports": "sudo sh -c \"setcap 'cap_net_bind_service=+ep' $(which node)\""
  },
  "dependencies": {
    "JSONStream": "^1.3.5",
    "axios": "^0.18.0",
    "busboy": "^0.3.0",
    "camelcase": "^5.0.0",
    "cuid": "^2.1.4",
    "debug": "^4.1.1",
    "express": "^4.16.4",
    "express-jwt": "^5.3.1",
    "express-vue": "^5.8.2",
    "greenlock-express": "^2.6.7",
    "ini": "^1.3.5",
    "jsonwebtoken": "^8.4.0",
    "knex": "^0.15.2",
    "nanoid": "^1.3.4",
    "nconf": "^0.10.0",
    "sqlite3": "4.0.6",
    "word-wrap": "^1.2.3"
  },
  "devDependencies": {
    "ava": "^1.2.1",
    "cross-env": "^5.2.0",
    "eslint": "^5.9.0",
    "nexe": "^3.0.0-beta.13",
    "nodemon": "^1.18.9",
    "supertest": "^3.3.0"
  },
  "ava": {
    "files": [
      "src/**/*.spec.js"
    ],
    "sources": [
      "src/**/*.js"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parserOptions": {
      "ecmaVersion": 2018,
      "parser": "babel-eslint"
    },
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {}
  }
}
