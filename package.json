{
  "name": "rpnow",
  "version": "0.2.0",
  "description": "The Dead-Simple Roleplay Chatroom Service",
  "main": "src/index.js",
  "dependencies": {
    "mongojs": "^2.4.0",
    "socket.io": "^1.7.2"
  },
  "devDependencies": {
    "babel-preset-env": "^1.2.2",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-cli": "^1.2.2",
    "gulp-concat": "^2.6.1",
    "gulp-css-condense": "^1.1.2",
    "gulp-load-plugins": "^1.5.0",
    "gulp-order": "^1.1.1",
    "jasmine": "^2.5.2",
    "socket.io-client": "^1.7.2"
  },
  "scripts": {
