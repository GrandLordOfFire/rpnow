{
  "name": "rpnow",
  "version": "0.2.0",
  "description": "The Dead-Simple Roleplay Chatroom Service",
  "main": "src/index.js",
  "dependencies": {
    "compression": "^1.6.2",
    "express": "^4.14.0",
    "mongojs": "^2.4.0",
    "morgan": "^1.7.0",
    "serve-favicon": "^2.4.1",
    "socket.io": "^1.7.2"
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.2.2",
    "jasmine": "^2.5.2",
    "request": "^2.75.0",
    "socket.io-client": "^1.7.2"
  },
  "scripts": {
    "prebuild": "rm -rf build",
    "build": "babel src/www/app -d build/www/app",
    "start": "node src/index.js",
    "pretest": "mkdir -p /tmp/rptestdb && mongod --dbpath /tmp/rptestdb --fork --logpath /dev/null --smallfiles",
    "test": "jasmine JASMINE_CONFIG_PATH=tests/support/jasmine.json; npm run-script cleanup-test",
    "cleanup-test": "mongo admin --eval 'db.shutdownServer()' > /dev/null && rm -rf /tmp/rptestdb",
    "docker-compose-runner": "npm cache clean && npm install && npm start"
  },
  "keywords": [
    "roleplay"
  ],
  "author": "Nigel Nelson",
  "license": "ISC"
}
