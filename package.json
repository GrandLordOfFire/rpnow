{
  "name": "rpnow",
  "version": "0.2.0",
  "description": "The Dead-Simple Roleplay Chatroom Service",
  "main": "src/index.js",
  "dependencies": {
    "mongojs": "^2.4.0",
    "socket.io": "^1.7.2"
  },
  "devDependencies": {
    "babel-preset-env": "^1.2.2",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-cli": "^1.2.2",
    "gulp-css-condense": "^1.1.2",
    "jasmine": "^2.5.2",
    "socket.io-client": "^1.7.2"
  },
  "scripts": {
    "prebuild": "rm -rf build/*",
    "build": "gulp",

    "start": "node server/index.js",
    
    "pretest": "mkdir -p /tmp/rptestdb && mongod --dbpath /tmp/rptestdb --fork --logpath /dev/null --smallfiles",
    "test": "jasmine JASMINE_CONFIG_PATH=server/tests/support/jasmine.json; npm run-script cleanup-test",
    "cleanup-test": "mongo admin --eval 'db.shutdownServer()' > /dev/null && rm -rf /tmp/rptestdb",

    "predocker-compose-build": "npm cache clean && npm install",
    "docker-compose-build": "npm run build",
    "predocker-compose-runner": "npm cache clean && npm install --prod",
    "docker-compose-runner": "npm start"
  },
  "keywords": [
    "roleplay"
  ],
  "author": "Nigel Nelson",
  "license": "ISC"
}
